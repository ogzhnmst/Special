<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailsActivity"
    android:orientation="vertical"
    android:background="@drawable/other_image">

    <RelativeLayout
        android:id="@+id/details_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="35dp">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progres_bar_background"
            android:progress="0"
            android:layout_marginTop="115dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/coffee_image"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            app:shapeAppearanceOverlay="@style/Circular"
            app:srcCompat="@drawable/dialog_background">

        </com.google.android.material.imageview.ShapeableImageView>

        <TextView
            android:id="@+id/details_coffee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/coffee_image"
            android:text="Coffee Name"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/robotoblack">

        </TextView>

        <ScrollView
            android:id="@+id/scroll_historical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_coffee_name"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/scroll_in_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/details_coffee_historical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/robotolight"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="historical"
                    android:textColor="@color/white"
                    android:textSize="17sp">

                </TextView>

                <TextView
                    android:id="@+id/details_coffee_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/robotolight"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="type"
                    android:textColor="@color/white"
                    android:textSize="17sp">

                </TextView>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>